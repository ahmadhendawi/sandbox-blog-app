<% content_for :title, "User Sign Up" %>
<div class="max-w-md mx-auto  p-6 bg-white rounded-md shadow-lg border-2 border-gray-300 mt-6">
  <% if flash[:alert] %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative max-w-2xl mx-auto my-4" role="alert">
              <span class="block sm:inline"><%= flash[:alert] %></span>
            </div>
          <% end %>
          
  <h1 class="text-2xl font-bold mb-5 text-center">Sign Up</h1>

  <%= form_with model: @user, url: signup_path, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block font-medium mb-1" %>
      <%= f.text_field :name, class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium mb-1" %>
      <%= f.email_field :email, class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium mb-1" %>
      <%= f.password_field :password, class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block font-medium mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full border px-3 py-2 rounded-md" %>
    </div>

    <%= f.submit "Sign Up", class: "w-full bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-md font-medium" %>
  <% end %>
</div>
