<% content_for :title , "All Articles"%>
    <div class="grid grid-cols-4 gap-10 m-4 mb-6 mx-w-auto">
       <% @articles.each do |article| %>
        <div class=" border-grey-300 py-5 px-10 rounded-lg shadow-lg bg-blue-100 text-center ">
        <div class=" grid mb-4">
        <p class="font-bold text-2xl text-sky-700"> <%= article.title %></p>
        </div>
        <div>
              <%= link_to "Read this article!", article, class: "mt-3 w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-500 hover:bg-blue-300 inline-block font-small text-white mb-3" %>
        </div>
        <p class="font-bold text-xl text-black"> written by <%= article.user.name %> </p>
      </div>

    <% end %>
  </div>

     <div  class="p-8 py-3 px-2 rounded-md mt-8 grid lg:grid-cols-2 gap-6 bg-gray-100 max-w-md mx-auto">
       <h2 class="text-lg font-semibold mb-6">Log into your Account!</h2>
       <%= link_to "Log in!", login_path, class: "inline-block px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium rounded-md mb-5" %>
       <h2 class="text-lg font-semibold mb-3">Want to register your own account?</h2>
       <%= link_to "Sign up!" , signup_path, class:"inline-block px-4 py-2 bg-green-600 hover:bg-green-500 text-white font-medium rounded-md mb-5"%>
     </div>
      